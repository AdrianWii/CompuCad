{% extends 'base.html.twig' %}

{#{% form_theme form "AppBundle:Form:form_theme.html.twig" %}#}

{% block body %}
    <h3 class="page-header">UŻYTKOWNICY</h3>
    <div class="">

        <table class="table table-striped table-excercises"> 
            <thead> 
                <tr> 
                    <th>#</th> 
                    <th>Login</th>
                    <th>Imię</th> 
                    <th>Naziwsko</th> 
                    <th>E-mail</th> 
                    {#<th>Udostępnione kursy</th> #}
                    <th></th>
                </tr> 
            </thead> 
            <tbody> 
                {% for u in users %}
                    <tr> 
                        <td>{{u.id}}</td> 
                        <td>{{u.username}}</td>
                        <td>{{u.name}}</td> 
                        <td>{{u.surname}}</td>
                        <td>{{u.email}}</td> 
                        {#<td>AUTOCAD</td> #}
                        <td>
                            <a href="deleteuser/{{u.id}}" class="btn btn-success btn-list pull-right">Usuń</a>
                            <a href="userupdate/{{u.id}}" class="btn btn-primary btn-list pull-right">Edytuj</a>
                            {#<a href="" class="btn btn-warning btn-list pull-right">Przydziel kurs</a>#}
                        </td> 
                    </tr>
                {% endfor %}

            </tbody> 
        </table>
    </div>
{% endblock %}